{
  "name": "{{ cookiecutter.project_name }}",
  "stack": "heroku-24",
  "env": {
    "ALLOWED_HOSTS": {
      "value": ".herokuapp.com"
    },
    "DEBUG": {
      "value": "True"
    },
    "DISABLE_COLLECTSTATIC": {
      "value": 0
    },
    "ENVIRONMENT": {
      "value": "review"
    },
    "PROJECT_PATH": {
      "value": "{{ cookiecutter.project_slug }}"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "false"
    },
    "DJANGO_SUPERUSER_PASSWORD": {
      "value": "!!!DJANGO_SECRET_KEY!!!"
    },
    "PLAYWRIGHT_TEST_USER_PASS": {
      "value": "!!!DJANGO_SECRET_KEY!!!"
    },
    "SECRET_KEY": {
      "generator": "secret"
    },
    "USE_EMAIL_ALLOWLIST": {
      "value": "False"
    },
    "EMAIL_ALLOWLIST": {
      "value": "[\"admin@thinknimble.com\"]"
    }
  },
  "addons": [
    "heroku-postgresql:standard-0",
    "papertrail:choklad",
    "heroku-redis:mini"
  ],
  "environments": {
    "review": {
      "addons": [
        "heroku-postgresql:essential-0",
        "papertrail:choklad",
        "heroku-redis:mini"
      ]
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "./scripts/db_setup.sh"
  }
}
