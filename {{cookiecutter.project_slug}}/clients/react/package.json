{
  "name": "{{ cookiecutter.project_slug }}",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    {% if cookiecutter.use_graphql == 'n' -%}
    "@tanstack/react-query": "^4.24.2",
    "axios": "^1.2.6",
    {% else -%}
    "@apollo/client": "^3.4.17",
    "graphql": "^16.0.1",
    "graphql-tag": "^2.12.6",
    {% endif -%}
    "@thinknimble/tn-forms": "^3.0.0",
    "@thinknimble/tn-forms-react": "^1.0.0",
    "cypress": "^8.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^3.0.0",
    "react-router-dom": "^6.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-prettier-config": "^1.0.1",
    "jsdom": "^20.0.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.25.3"
  },
  "proxy": "http://localhost:8000",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "cypress": "source ../.env && npx cypress open",
    "test": "vitest run src",
    "test:watch": "vitest src",
    "test:single": "vitest $0",
    "heroku-postbuild": "npm build",
    "prettier": "prettier --write ./src",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx src",
    "dev-rest": "mv src/main.rest.tsx main.tsx",
    "dev-gql": "mv src/main.gql.tsx src/main.tsx",
    "use-rest": "npm rm @apollo/client graphql graphql-tag;bash config-scripts/use-rest.sh",
    "use-gql": "npm rm @tanstack/react-query axios; bash config-scripts/use-gql.sh"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
