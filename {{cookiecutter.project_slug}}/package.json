{
  "scripts": {
    {% if cookiecutter.client_app == 'React' %}
    "build": "cd client && yarn install && yarn run build"
    {% else %}
    "postinstall": "cd client && npm install",
    "heroku-postbuild": "cd client && npm run heroku-postbuild"
    {% endif %}
  },
  "engines": {
    "node": "16.*.*",
    "npm": "7.*.*"
  },
  {% if cookiecutter.client_app == 'Vue3' %}
  "cacheDirectories": [
    "client/node_modules",
    ".cache/Cypress"
  ],
  {% endif %}
  {%- if cookiecutter.client_app == 'React' %}
  "workspaces": [
    "client"
  ],
  {% endif %}
  "dependencies": {}
}
