{
  "name": "TN SPA Bootstrapper",
  "env": {
    "ALLOWED_HOSTS": {
      "value": ".herokuapp.com"
    },
    "BUILDPACK_RUN": {
      "value": "./scripts/buildpack_run.sh"
    },
    "DEBUG": {
      "value": "True"
    },
    "DISABLE_COLLECTSTATIC": {
      "value": 1
    },
    "ENVIRONMENT": {
      "value": "staging"
    },
    "MAILGUN_DOMAIN": {
      "value": "thinknimble.com"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "false"
    },
    "PROJECT_PATH": {
      "value": "my_project"
    },
    "SECRET_KEY": {
      "generator": "secret"
    }
  },
  "addons": ["heroku-postgresql:standard-0", "heroku-redis:mini"],
  "environments": {
    "review": {
      "addons": ["heroku-postgresql:essential-0", "heroku-redis:mini"]
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "./scripts/db_setup.sh"
  }
}
